{
    "name": "drizzle-rest-demo",
    "version": "1.0.0",
    "description": "Demo project showcasing drizzle-rest-adapter with Express",
    "type": "module",
    "scripts": {
        "dev": "tsx --watch src/server.ts",
        "start": "node dist/server.js",
        "build": "tsc && tsc-alias",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio",
        "db:seed": "tsx src/db/seed.ts"
    },
    "dependencies": {
        "express": "^4.18.2",
        "drizzle-orm": "^0.44.2",
        "drizzle-rest-adapter": "file:..",
        "@electric-sql/pglite": "^0.3.4"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.5",
        "drizzle-kit": "^0.31.4",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "tsc-alias": "^1.8.16"
    }
}