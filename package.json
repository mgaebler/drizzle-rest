{
    "name": "drizzle-rest-adapter",
    "version": "0.1.0",
    "description": "A dynamic REST API adapter for Drizzle ORM with JSON-Server compatible query syntax",
    "main": "src/index.ts",
    "types": "src/index.ts",
    "type": "module",
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "types": "./src/index.ts"
        }
    },
    "files": [
        "src",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "start": "tsx --require tsconfig-paths/register src/index.ts",
        "dev": "tsx --require tsconfig-paths/register --watch src/",
        "build": "tsc && tsc-alias",
        "build:watch": "npm run build -- --watch",
        "prepublishOnly": "npm test",
        "db:migrate": "drizzle-kit migrate",
        "db:generate": "drizzle-kit generate",
        "test": "vitest --run",
        "test:watch": "vitest",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix"
    },
    "keywords": [
        "drizzle",
        "drizzle-orm",
        "rest",
        "api",
        "json-server",
        "typescript",
        "express",
        "crud",
        "adapter",
        "database",
        "postgresql"
    ],
    "author": "Marian Gaebler <marian.gaebler@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/mgaebler/drizzle-rest-adapter.git"
    },
    "bugs": {
        "url": "https://github.com/mgaebler/drizzle-rest-adapter/issues"
    },
    "homepage": "https://github.com/mgaebler/drizzle-rest-adapter#readme",
    "dependencies": {
        "@electric-sql/pglite": "^0.3.4",
        "drizzle-orm": "^0.44.2",
        "drizzle-seed": "^0.3.1",
        "drizzle-zod": "^0.5.1",
        "express": "^4.18.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^5.1.0",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.5",
        "@types/supertest": "^6.0.0",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9.31.0",
        "eslint-plugin-drizzle": "^0.2.3",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.3.0",
        "supertest": "^6.3.4",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.36.0",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^1.3.1"
    }
}